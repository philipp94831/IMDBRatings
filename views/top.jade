extends layout

block scripts
  script(src='/controllers/application.js')

block content
  div.layout-flex.row.wrap.center
    each show in shows
      .top-title.layout-center
        paper-card(heading='#{show.title}')          
          a(href='/#{show.id}')
            .card-content.layout-flex
              img(src='#{show.img}')
              .summary
                p Rated #{show.rating}/10
                p= show.outline
                p With #{show.actors.join(', ')}
          .card-actions
            span.link.gray
              a(href='http://imdb.com/title/#{show.id}', target='_blank')
                iron-icon(icon="language")
                span IMDb