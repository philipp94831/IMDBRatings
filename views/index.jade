extends layout

block vars
  - selected = 0

block scripts
  script(src='/controllers/application.js')

block content
  .layout.vertical.center.full(ng-controller='ApplicationController')
    .layout.vertical.layout-vcenter
      p.hcenter Visualize IMDb Ratings of TV Shows.
      form#main-search.layout-center(is="iron-form", role='search', method="get", action="/search")
        paper-input(name='q', label ='Search for a TV Series', required, size="550")
          button.hidden(suffix)
            paper-icon-button.gray(icon="search")
      .hcenter
        p Have you seen?
        .layout.vertical
          each val in [{title: 'The Sopranos', id: 'tt0141842'}, {title: 'Breaking Bad', id: 'tt0903747'}, {title: 'Better Call Saul', id: 'tt3032476'}]
            span.link.gray
              a(href='/#{val.id}')
                iron-icon(icon="theaters")
                span= val.title
